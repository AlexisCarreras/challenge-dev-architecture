{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "__mocks__/nextImageMock.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "next-env.d.ts"
  ]
}
